{
  "name": "fabula",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A browser extension that gives you updates from all of your favorite social networks",
  "homepage_url": "http://cs.virginia.edu",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    // "scripts": [
    //   "src/bg/background.js"
    // ],
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "fabula",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "chrome://favicon/",
    "clipboardWrite",
    "idle",
    "notifications",
    "geolocation",
    "tabs",
    "https://*.twitter.com/*",
    "https://*.facebook.com/*",
    "https://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        // add other oauth authorizing components for facebook and instagram here
        "http://twitter.com/oauth/authorize",
        "https://twitter.com/oauth/authorize",
        "http://api.twitter.com/oauth/authorize",
        "https://api.twitter.com/oauth/authorize",
        "https://instagram.com/oauth/authorize/*",
        "http://*/*", "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "oauth/oauth_authorizer.js"
      ]
    }
  ]
}
