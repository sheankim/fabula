{
  "name": "fabula",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "29",
  "description": "A browser extension that gives you updates from all of your favorite social networks",
  "homepage_url": "http://cs.virginia.edu",
  "key": "MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQDth91jxOpPpN5hQFT1uAUJPLwyeOKaqNMBoEF1s7y9aMGsnx4Sxmg+eQsuTdgtJbHfMHYUIAxqvpXvHYCWXQ9gJLOZ7CbZzoRU2SimAOIF8Pro2CjxRMMT1nNA5EAjUR52h94",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "fabula",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "identity",
    "notifications",
    "geolocation",
    "https://*.twitter.com/*",
    "https://*.facebook.com/*",
    "https://api.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        // add other oauth authorizing components for facebook and instagram here
        "http://twitter.com/oauth/authorize",
        "https://twitter.com/oauth/authorize",
        "http://api.twitter.com/oauth/authorize",
        "https://api.twitter.com/oauth/authorize"
      ],
      "js": [
        "js/jquery/jquery.js",
        "oauth/oauth_authorizer.js"
      ]
    }
  ]
}
